<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/img_btn_play_list"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/img_icon_play_list"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/text_view_phu_pla_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/img_icon_play_list"
        android:layout_below="@id/img_icon_play_list"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:text="Ten Bai Hat"/>

</RelativeLayout>